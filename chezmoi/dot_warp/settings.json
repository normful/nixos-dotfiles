{
  "theme": "wezterm-dark",
  "font_size": 20,
  "font_family": "Inconsolata Nerd Font Mono",
  "cursor_style": "block",
  "shell": {
    "program": "/run/current-system/sw/bin/fish",
    "args": []
  },
  "window": {
    "opacity": 1.0,
    "blur": false,
    "padding": 10,
    "decorations": "resize_only",
    "initial_cols": 200,
    "initial_rows": 70
  },
  "editor": {
    "vim_mode": false,
    "word_wrap": true
  },
  "terminal": {
    "scrollback_lines": 100000,
    "bell": false,
    "cursor_blink": true,
    "max_fps": 120
  },
  "appearance": {
    "tab_bar_style": "native",
    "tab_bar_position": "bottom",
    "hide_tab_bar_if_only_one_tab": false,
    "show_tabs_in_tab_bar": true,
    "tab_max_width": 20,
    "window_decorations": "resize"
  },
  "behavior": {
    "confirm_quit": true,
    "auto_update": false,
    "telemetry": false,
    "check_for_updates": false,
    "notification_handling": "never_show"
  },
  "features": {
    "enable_ime": true,
    "enable_kitty_keyboard": true,
    "quick_select_patterns": [
      "~?(?:[-.\\\\w]*/)+[-.\\\\w]*",
      "https?://[^<>\"\\\\s{-}\\\\^⟨⟩`│⏎]+",
      "[a-f\\\\d]{4,}|[A-Z_]{4,}"
    ]
  },
  "colors": {
    "tab_bar": {
      "background": "#0b0022",
      "active_tab": {
        "background": "#2b2042",
        "foreground": "#c0c0c0"
      },
      "inactive_tab": {
        "background": "#1b1032",
        "foreground": "#808080"
      },
      "inactive_tab_hover": {
        "background": "#3b3052",
        "foreground": "#909090"
      },
      "new_tab": {
        "background": "#1b1032",
        "foreground": "#808080"
      },
      "new_tab_hover": {
        "background": "#3b3052",
        "foreground": "#909090"
      }
    }
  }
}

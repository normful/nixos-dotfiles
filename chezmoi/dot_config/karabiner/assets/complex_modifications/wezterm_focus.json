{
  "title": "Toggle between WezTerm and Vivaldi",
  "rules": [
    {
      "description": "Cmd+`: If in WezTerm, focus Vivaldi",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.github\\.wez\\.wezterm$"
              ]
            }
          ],
          "from": {
            "key_code": "grave_accent_and_tilde",
            "modifiers": {
              "mandatory": ["left_command"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "shell_command": "osascript -e 'tell application \"Vivaldi\" to activate'"
            }
          ]
        }
      ]
    },
    {
      "description": "Cmd+`: If not in WezTerm, focus WezTerm",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.github\\.wez\\.wezterm$"
              ]
            }
          ],
          "from": {
            "key_code": "grave_accent_and_tilde",
            "modifiers": {
              "mandatory": ["left_command"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "shell_command": "osascript -e 'tell application \"WezTerm\" to activate'"
            }
          ]
        }
      ]
    }
  ]
}